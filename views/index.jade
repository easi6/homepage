extends layout

block content

  div#nav
    div.nav-container
      h1
        a.logo(href="#about")
      nav#main-nav.navbar
        ol.nav.font-replica-reg
          li
            a.nav-item(href="#about") ABOUT US
          li
            a.nav-item(href="#works") WORKS
          li
            a.nav-item(href="#contact") TEAM
        //
          li.left
            a.nav-item(href="http://blog.easi6.com") blog
          li.right
            a.nav-item(href="#members") team

  div#main-container
    section#about
      div#intro
        div#page-1.intro-page
          img.page-title(src="/images/sentence1.png")
        div#page-2.intro-page
          img.page-title(src="/images/sentence2.png")
        div#page-3.intro-page
          img.page-title(src="/images/sentence3.png")
        div#page-4.intro-page
          img.page-title(src="/images/sentence4.png")
      div#description
        p.desc.font-replica-reg
          q "easi6, Inc., is a Korean-American tech startup headquartered in Jersey City, NJ, with a satellite office in Seoul, South Korea." 
        div.logo 
          img.logo(src="/images/easi6_logo_green.png")
    section#works
      div.work-container
        ol.works
          li.item.next
          li.item.vox
          li.item.minam
          li.item.tomoni
          li.item.dnd
      div.work-images
        img.works(src="/images/easi6_work.jpg")

    section#members
      div.member-container
        ol.members
          li.member.kay
            .container
              div.name-area.font-replica-reg
                h5.name Kyeongsik Kay Woo | 우경식
                h6.position Chief Executive Officer
              div.photo-area
                img.normal(src="/images/members/Kay_woo.png")
                img.hover(src="/images/members/Kay_woo.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto Columbia University MS Financial Math/STAT
                  li.item
                    p.font-roboto Seoul National University / Electrical Engineering
