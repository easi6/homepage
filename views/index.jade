extends layout

block content

    div#nav
      div.nav-container
        .nav-content
          h1
            a.logo(href="#news")
              img(src="/images/easi6_logo_white.png")
          nav#main-nav.navbar.hidden-xs
            ol.nav.font-replica-bold
              li
                a.nav-item(href="#news") SERVICES
              li
                a.nav-item(href="#about") ABOUT US
              li
                a.nav-item(href="#members") TEAM
          nav#main-nav-mobile.navbar.visible-xs-block
