extends layout

block content

  div#nav
    div.nav-container
      h1
        a.logo(href="#about")
      nav#main-nav.navbar
        ol.nav.font-replica-bold
          li
            a.nav-item(href="#about") ABOUT US
          li
            a.nav-item(href="#works") WORKS
          li
            a.nav-item(href="#contact") TEAM
        //
          li.left
            a.nav-item(href="http://blog.easi6.com") blog
          li.right
            a.nav-item(href="#members") team

  div#main-container
    section#about
      div#intro
        div#page-1.intro-page
          img.page-1(src="/images/bg-page-1.jpg")
          .page-title
            img.title-1(src="/images/sentence1.png")
        div#page-2.intro-page
          img.page-2(src="/images/bg-page-2.jpg")
          .page-title
            img.title-2(src="/images/sentence2.png")
        div#page-3.intro-page
          img.page-3(src="/images/bg-page-3.jpg")
          .page-title
            img.title-3(src="/images/sentence3.png")
        div#page-4.intro-page
          img.page-4(src="/images/bg-page-4.jpg")
          .page-title
            img.title-4(src="/images/sentence4.png")
      div#description
        p.desc.font-replica-reg
          q "To make people easy"
        div.logo 
          img.logo(src="/images/easi6_logo_green.png")
    section#works
      div.work-container
        .content
          ol.works
            each val in ['next', 'vox', 'minam', 'tomoni', 'dnd']
              li.item(class=val)
                img(src="/images/btn_work_" + val + ".png")
                img.hover(src="images/btn_hover_work_" + val + ".png")
      div.work-images
        img.works(src="/images/easi6_work.jpg")

    section#members
      div.member-container
        ol.members
          li.member.kay
            .container
              div.name-area.font-replica-reg
                h5.name Kyeongsik Kay Woo  &nbsp;| &nbsp;우경식
                h6.position Chief Executive Officer
              div.photo-area
                img.normal(src="/images/members/Kay_woo.png")
                img.hover(src="/images/members/Kay_woo.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto Columbia University MS Financial Math/STAT
                  li.item
                    p.font-roboto Seoul National University / Electrical Engineering
          li.member.jade
            .container
              div.name-area.font-replica-reg
                h5.name Jade Han &nbsp;| &nbsp;한광수
                h6.position Lead Engineer
              div.photo-area
                img.normal(src="/images/members/jade_han.png")
                img.hover(src="/images/members/jade_han.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto Seoul National University / Computer science
          li.member.sunny
            .container
              div.name-area.font-replica-reg
                h5.name Kyungsun Sunny Hong &nbsp;| &nbsp;홍경선
                h6.position Partner / Lead Designer
              div.photo-area
                img.normal(src="/images/members/sunny.png")
                img.hover(src="/images/members/sunny.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto School of Visual Arts / Graphic Design
                  li.item
                    p.font-roboto Worked at Landor Associates in NY
          li.member.daewon
            .container
              div.name-area.font-replica-reg
                h5.name Daewon Kim &nbsp;| &nbsp;김대원
                h6.position Developer
              div.photo-area
                img.normal(src="/images/members/Daewon_kim.png")
                img.hover(src="/images/members/Daewon_kim.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto Seoul National University / Electrical Engineering
          li.member.taekmin
            .container
              div.name-area.font-replica-reg
                h5.name Taekmin Kim &nbsp;| &nbsp;김택민
                h6.position Developer
              div.photo-area
                img.normal(src="/images/members/taekmin_kim.png")
                img.hover(src="/images/members/taekmin_kim.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto Seoul National University / Computer Science
          li.member.myunkyu
            .container
              div.name-area.font-replica-reg
                h5.name Myunkyu Park &nbsp;| &nbsp;박면규 
                h6.position Developer
              div.photo-area
                img.normal(src="/images/members/Myunkyu_Park.png")
                img.hover(src="/images/members/Myunkyu_Park.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto Seoul National University / Computer Science
          li.member.jungmo
            .container
              div.name-area.font-replica-reg
                h5.name YoungHo Seo &nbsp;| &nbsp;서영호
                h6.position Business Advisor
              div.photo-area
                img.normal(src="/images/members/youngho_suh.png")
                img.hover(src="/images/members/youngho_suh.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto Master of China business
          li.member.chase
            .container
              div.name-area.font-replica-reg
                h5.name Chase &nbsp;| &nbsp;체이스
                h6.position Chief Dog
              div.photo-area
                img.normal(src="/images/members/chase.png")
                img.hover(src="/images/members/chase.gif")
              div.experience
                ul.experience
                  li.item
                    p.font-roboto Love chasing stranger's smell

    section#contact
      div.contact-container
        ul.contacts
          li.item.map
            a(href="#")
          li.item.mail
            a(href="mailto:info@easi6.com", target="_top")
          li.item.facebook
            a(href="https://facebook.com/easi6", target="_blank")
          li.item.twitter
            a(href="https://twitter.com/easi6", target="_blank")
          li.item.blog
            a(href="http://blog.easi6.com", target="_blank")
      div.footer
        p.desc.font-roboto 2015 easi6 Inc. All Rights Reserved

  section#modal
    div#vox-modal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
          .modal-body
            .vox-container
              .screenshot-container
                .screenshot-area.vox
                  img.vox(src="/images/vox1.png")
                  img.vox(src="/images/vox2.png")
                  img.vox(src="/images/vox3.png")
              .description-container
                .description-area.font-roboto
                  .name-area
                    h3.name VOX
                  .desc-area 
                    p.desc.
                      VOX is an unique concept
                      <br />application that you can share your
                      <br />12 second life story
                  .homepage-area
                    p.url
                      a.vox(href="http://voxstory.com", target="_blank") voxstory.com
    div#minam-modal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
          .modal-body
            .vox-container
              .screenshot-container
                .screenshot-area.minam
                  img.minam(src="/images/minam.png")
              .description-container
                .description-area.font-roboto
                  .name-area
                    h3.name You look gorgeous
                  .desc-area 
                    p.desc.
                      This is a 'mean' application that you can compete with your friends.<br /> You can find out who is the most ugliest one.
                  .homepage-area
                    p.url
                      a.vox(href="http://minam.easi6.com", target="_blank") minam.easi6.com
    div#tomoni-modal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
          .modal-body
            .vox-container
              .screenshot-container
                .screenshot-area.tomoni
                  img.tomoni(src="/images/tomoni1.png")
                  img.tomoni(src="/images/tomoni2.png")
                  img.tomoni(src="/images/tomoni3.png")
              .description-container
                .description-area.font-roboto
                  .name-area
                    h3.name Tomoni
                  .desc-area 
                    p.desc.
                      Tomoni is an application that you can broadcast or participate activities near you. <br /> <br />
                      Don't play alone, play together with Tomoni.
                  .homepage-area
                    p.url
                      a.vox(href="http://tomoniapp.com", target="_blank") tomoniapp.com
    div#dnd-modal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
          .modal-body
            .vox-container
              .screenshot-container
                .screenshot-area.dnd
                  iframe(src="//player.vimeo.com/video/72255740", width="580", height="333", frameborder="0", webkitallowfullscreen, mozallowfullscreen, allowfullscreen)
              .description-container
                .description-area.font-roboto
                  .name-area
                    h3.name Doors&Dots
                  .desc-area 
                    p.desc.
                      The Fast and Easy Way to Meet Your Friends, it is Doors & Dots.
                  .homepage-area
                    p.url
                      a.vox(href="http://doorsndots.com", target="_blank") doorsndots.com
    div#map-modal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
          .modal-body
            .vox-container
              #map_canvas(style="height:340px; width:550px;")
              .address
                p.address.font-roboto.
                  33,2nd floor, Nonhyeon-ro 11-gil,Secho-gu,Seoul,Korea,137-895
    div#easi6-modal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
          .modal-body
            .vox-container
              .screenshot-container
                .screenshot-area
                  img(src="/images/meeting.jpg")
              .description-container
                .description-area.font-roboto
                  .name-area.no-name
                    img.logo(src="/images/easi6_logo_green.png")
                  .desc-area.no-name
                    p.desc.
                      Now we are working on the various range of projects such as a new business expansion in China by connecting online to offline service and we are planning to launch soon our first product on kickstarter.<br /> <br />
                      Stay tuned with us. We keep posting our new exciting projects here.
