body
  font-family 'Open sans', sans-serif
  font-size 14px
  color rgba(51,51,51,0.2) 3
  padding 0
  margin 0

@font-face
  font-family 'Replica Pro'
  font-weight 400
  src url("/font/ReplicaProRegular.otf")
  font-family 'Replica Pro'
  font-weight 500
  src url("/font/ReplicaProBold.otf")

.font-roboto
  font-family 'Roboto'
  font-weight 400

.font-replica-reg
  font-family 'Replica Pro'
  font-weight 400

.font-replica-bold
  font-family 'Replica Pro'
  font-weight 500

#container
  width 960px
  position relative
  margin auto

#nav
  z-index 999
  position fixed
  background-color #00c496
  width 960px
  height 75px
  .nav-container
    width 100%
    height 100%
    position relative
    h1
      position absolute
      top 50%
      transform translate(0, -50%)
      margin-left 48px
      a
        &.logo
          display block
          background url("/images/easi6_logo_white.png") no-repeat
          width 95px
          height 29px
    nav#main-nav
      color #fff
      ol
        &.nav
          float right
          position absolute
          top 50%
          transform translate(0, -50%)
          right 48px
          li
            float left
            display inline-block
            margin-left 56px
            a
              &.nav-item
                text-decoration none
                font-size 16px
                color #fff
            &.active
              a
                &.nav-item
                  color #005d61

#main-container
  padding 0
  margin-top 0
  background #fff
  width 100%
  margin auto

#intro
  .intro-page
    width 100%
    height 600px
    position relative
    img
      &.page-title
        position absolute
        left 48px
        top 135px
  #page-1
    background url("/images/bg-page-1.jpg") no-repeat
  #page-2
    background url("/images/bg-page-2.jpg") no-repeat
  #page-3
    background url("/images/bg-page-3.jpg") no-repeat
  #page-4
    background url("/images/bg-page-4.jpg") no-repeat

#description
  background-color #eeeeef
  height 100%
  width 100%
  p
    &.desc
      max-width 600px
      margin auto
      padding-top 60px
      display block
      text-align center
      color #6d6e71
      font-size 22px
  div
    &.logo
      display block
      margin auto
      margin-top 42px
      margin-bottom 60px
      width 100%
      height 100%
      img
        &.logo
          margin auto
          display block

#works
  div
    &.work-container
      height 306px
      width 100%
      padding-top: 60px
      ol
        &.works
          padding-top 60px
          margin-bottom 30px
          li
            &.item
              width 156px
              height 156px
              float left
              margin-left 30px
              cursor pointer
            &.next
              background url("/images/btn_work_next.png") no-repeat
              &:hover
                background url("/images/btn_hover_work_next.png") no-repeat
            &.vox
              background url("/images/btn_work_vox.png") no-repeat
              &:hover
                background url("/images/btn_hover_work_vox.png") no-repeat
            &.minam
              background url("/images/btn_work_minam.png") no-repeat
              &:hover
                background url("/images/btn_hover_work_minam.png") no-repeat
            &.tomoni
              background url("/images/btn_work_tomoni.png") no-repeat
              &:hover
                background url("/images/btn_hover_work_tomoni.png") no-repeat
            &.dnd
              background url("/images/btn_work_dnd.png") no-repeat
              &:hover
                background url("/images/btn_hover_work_dnd.png") no-repeat

#members
  height 100%
  width 100%
  div
    &.member-container
      position relative
      padding-top 75px
      height 100%
      width 100%
      float left
      ol
        &.members
          width 100%
          max-width 846px
          margin auto
          position relative
          li
            &.member
              float left
              width 50%
              max-width 423px
              margin auto
              .container
                width 100%
                max-width 375px
                margin auto
                .name-area
                  width 100%
                  height 75px
                  border-top solid 1px #808080
                  border-bottom solid 1px #808080
                  position relative
                  h5
                    &.name
                      color #00c496
                      font-size 19px
                      text-align center
                      display inline-block
                      margin-top 16px
                      width 100%
                  h6
                    &.position
                      color #808080
                      font-size 13px
                      display inline-block
                      text-align center
                      position absolute
                      bottom 16px
                      width 100%
                      left 0
                .photo-area
                  margin-top 21px
                  width 100%
                  height 100%
                  .normal
                    display block
                  .hover
                    display none
                    animation-play-state paused
                    -webkit-animation-play-state paused
                  &:hover
                    .normal
                      display none
                    .hover
                      display block
                      animation-play-state initial
                      -webkit-animation-play-state initial
                div
                  &.experience
                    height 138px
                    padding-top 12px
                    ul
                      &.experience
                        text-align center
                        li
                          &.item
                            margin-top 18px
                            p
                              font-size 15px
                              color #808080

#contact
  height 100%
  width 100%
  div
    &.contact-container
      height 101px
      width 100%
      float left
      ul
        &.contacts
          margin auto
          margin-bottom 30px
          max-width 525px
          li
            &.item
              width 71px
              height 71px
              float left
              margin-left 30px
              cursor pointer
              a
                display inline-block
                width 100%
                height 100%
            &.map
              a
                background url("/images/btn_map.png") no-repeat
                &:hover
                  background url("/images/btn_hover_map.png") no-repeat
            &.mail
              a
                background url("/images/btn_email.png") no-repeat
                &:hover
                  background url("/images/btn_hover_email.png") no-repeat
            &.facebook
              a
                background url("/images/btn_facebook.png") no-repeat
                &:hover
                  background url("/images/btn_hover_facebook.png") no-repeat
            &.twitter
              a
                background url("/images/btn_twitter.png") no-repeat
                &:hover
                  background url("/images/btn_hover_twitter.png") no-repeat
            &.blog
              a
                background url("/images/btn_blog.png") no-repeat
                &:hover
                  background url("/images/btn_hover_blog.png") no-repeat
    &.footer
      p
        &.desc
          text-align center
          font-size 12px
          margin-bottom 45px

#modal
  .modal
    border-radius 5px
    .modal-dialog
      width 960px
      height 525px
      border-radius 5px
      background-color #fff
      .modal-content
        float left
        width 100%
        height 100%
        border 0
        border-radius 5px
        .modal-header
          padding 0
          margin 0
          border 0
          button
            &.close
              position absolute
              top 22px
              right 45px
              width 47px
              height 47px
              background url("/images/btn_x.png") no-repeat
        .modal-body
          padding 0
          margin 0
          border 0
          position relative
        .vox-container
          width 100%
          height 100%
          position relative
          .screenshot-container
            float left
            width 675px
          .description-container
            float left
            width 285px
            margin-top 75px
            .description-area
              margin-left 7px
              margin-top 45px
              width 225px
              color: #59595b
              .name-area
                border-bottom solid 1px #808080
                height 31px
                h3
                  font-size: 19px
              .desc-area
                border-bottom solid 1px #808080
                border-top solid 1px #808080
                min-height 152px
                max-height 187px
                margin-top 38px
                p
                  &.desc
                    margin-top: 26px
                    margin-bottom: 26px
                    text-align left
                    font-size 13px
                    line-height 1.6
              .homepage-area
                border-bottom solid 1px #808080
                height 26px
                margin-top 30px
                a
                  color #58595b
                  font-size 13px
                  text-decoration none
                  margin-bottom: 12px
                  &:hover
                    text-decoration none
                  &:visited
                    color #58595b
  #vox-modal
    .screenshot-area
      &.vox
        margin-left 30px
        margin-top 48px
        img
          &.vox
            margin-left 8px
  #minam-modal
    .screenshot-area
      margin-left 33px
      margin-top 38px
  #tomoni-modal
    .screenshot-area
      margin-left 30px
      margin-top 48px
      img
        margin-left 8px
  #dnd-modal
    .screenshot-area
      margin-left 75px
      margin-top 85px
  #map-modal
    .screenshot-area
      margin-left 75px
      margin-top 50px
  #map_canvas
    margin auto
    margin-top 60px
  p.address
    font-size 18px
    margin auto
    margin-top 30px
    text-align center
    width 550px
    height 25px
    color #58595b

