#container
  width: 1280px
  position: relative
  margin: auto

#nav
  z-index: 999
  position: fixed
  background-color: #00C496
  width: 1280px
  height: 100px
  .nav-container
    width: 100%
    height: 100%
    position: relative
    h1
      position: absolute
      top: 50%
      transform: translate(0, -50%)
      margin-left: 65px
      a.logo
        display:block
        background: url(/images/easi6_logo_white.png) no-repeat
        width: 127px
        height: 38px
    nav#main-nav
      color: white
      ol.nav 
        float: right
        position: absolute
        top: 50%
        transform: translate(0, -50%)
        right: 65px
        li
          float: left
          display: inline-block
          margin-left: 75px
          a.nav-item
            text-decoration: none
            font-size: 22px
            color: white
        li.active
          a.nav-item
            color: #005D61

#main-container
  padding: 0
  //padding-top: 100px
  margin-top:0
  background:white
  width:100%
  margin:auto

#intro
  .intro-page
    width: 100%
    height: 800px
    position: relative
    img.page-title
      position: absolute
      left: 65px
      top: 180px
  #page-1
    background: url(/images/bg-page-1.jpg) no-repeat
  #page-2
    background: url(/images/bg-page-2.jpg) no-repeat
  #page-3
    background: url(/images/bg-page-3.jpg) no-repeat
  #page-4
    background: url(/images/bg-page-4.jpg) no-repeat

#description
  background-color: #EEEEEF
  height: 100%
  width: 100%
  p.desc
    max-width: 800px
    margin: auto
    padding-top: 80px
    display: block
    text-align: center
    color: #58595B
    font-size: 30px
  div.logo
    display: block
    margin: auto;
    margin-top: 60px
    margin-bottom: 80px
    width: 100%
    height: 100%
    img.logo
      margin: auto
      display: block

#works
  div.work-container
    height: 328px
    width: 100%
    ol.works
      padding-top: 80px
      margin-bottom: 40px
      li.item
        width: 208px
        height: 208px
        float: left
        margin-left: 40px
        cursor: pointer
      li.next
        background: url(/images/btn_work_next.png) no-repeat
      li.next:hover
        background: url(/images/btn_hover_work_next.png) no-repeat
      li.vox
        background: url(/images/btn_work_vox.png) no-repeat
      li.vox:hover
        background: url(/images/btn_hover_work_vox.png) no-repeat
      li.minam
        background: url(/images/btn_work_minam.png) no-repeat
      li.minam:hover
        background: url(/images/btn_hover_work_minam.png) no-repeat
      li.tomoni
        background: url(/images/btn_work_tomoni.png) no-repeat
      li.tomoni:hover
        background: url(/images/btn_hover_work_tomoni.png) no-repeat
      li.dnd
        background: url(/images/btn_work_dnd.png) no-repeat
      li.dnd:hover
        background: url(/images/btn_hover_work_dnd.png) no-repeat

#members
  height: 100%
  width: 100%
  div.member-container
    position: relative
    padding-top: 100px
    height: 100%
    width: 100%
    float: left
    ol.members
      width: 100%
      max-width: 1128px
      margin: auto
      position: relative
      li.member
        float: left
        width: 50%
        max-width: 564px
        margin: auto
        .container
          width: 100%
          max-width: 500px
          margin: auto
          .name-area
            width: 100%
            height: 100px
            border-top: solid 1px #808080 
            border-bottom: solid 1px #808080
            position: relative
            h5.name
              color: #00C496
              font-size: 26px
              text-align: center
              display: inline-block
              margin-top: 22px
              width: 100%
            h6.position
              color: #808080
              font-size: 18px
              display: inline-block
              text-align: center
              position: absolute
              bottom: 22px
              width: 100%
              left: 0
          .photo-area
            margin-top: 28px
            width: 100%
            height: 100%
            .normal
              display: block
            .hover
              display: none
              animation-play-state: paused
              -webkit-animation-play-state: paused
          .photo-area:hover
            .normal
              display: none
            .hover
              display: block
              animation-play-state: initial
              -webkit-animation-play-state: initial
          div.experience
            height: 184px
            padding-top: 16px
            ul.experience
              text-align: center
              li.item
                margin-top: 24px
                p
                  font-size: 20px
                  color: #808080
            
#contact
  height: 100%
  width: 100%
  div.contact-container
    height: 135px
    width: 100%
    float: left
    ul.contacts
      margin: auto
      margin-bottom: 40px
      max-width: 700px
      li.item
        width: 95px
        height: 95px
        float: left
        margin-left: 40px
        cursor: pointer
        a
          display: inline-block
          width: 100%
          height: 100%
      li.map a
        background: url(/images/btn_map.png) no-repeat
      li.map a:hover
        background: url(/images/btn_hover_map.png) no-repeat
      li.mail a
        background: url(/images/btn_email.png) no-repeat
      li.mail a:hover
        background: url(/images/btn_hover_email.png) no-repeat
      li.facebook a
        background: url(/images/btn_facebook.png) no-repeat
      li.facebook a:hover
        background: url(/images/btn_hover_facebook.png) no-repeat
      li.twitter a
        background: url(/images/btn_twitter.png) no-repeat
      li.twitter a:hover
        background: url(/images/btn_hover_twitter.png) no-repeat
      li.blog a
        background: url(/images/btn_blog.png) no-repeat
      li.blog a:hover
        background: url(/images/btn_hover_blog.png) no-repeat
  div.footer
    p.desc
      text-align: center
      font-size: 16px
      margin-bottom: 100px
