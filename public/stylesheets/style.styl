#nav
  z-index 999
  position fixed
  background-color #00c496
  //max-width 960px
  max-width 100%
  width 100%
  .nav-container
    width 100%
    position relative
    &:before
      content ""
      display block
      //padding-top 7.8%
      padding-top 60px
      @media (max-width: 767px)
        //padding-top 9.375%
        padding-top 55px
    .nav-content
      position absolute
      top 0
      left 0
      bottom 0
      right 0
      h1
        position absolute
        width 9.8%
        min-width 55px
        max-width 100px
        top 50%
        transform translate(0, -50%)
        -webkit-transform translate(0, -50%)
        -ms-transform translate(0, -50%)
        left 5%
        a
          &.logo
            display block
            img
              width 100%
              border none
              margin 0
              padding 0
      nav#main-nav
        color #fff
        ol
          &.nav
            float right
            position absolute
            top 50%
            transform translate(0, -50%)
            -webkit-transform translate(0, -50%)
            -ms-transform translate(0, -50%)
            right 48px
            li
              float left
              display inline-block
              //margin-left 56px
              margin-left 25px
              a
                transition color 200ms ease-out
                -webkit-transition color 200ms ease-out
                -moz-transition color 200ms ease-out
                -o-transition color 200ms ease-out
                &.nav-item
                  text-decoration none
                  font-size 16px
                  color #009975
              &:hover
                a
                  &.nav-item
                    color #808080 //fallback
                    color rgba(0,0,0,.5)
              &.active
                a
                  &.nav-item
                    color #fff      
                    
      nav#main-nav-mobile
        display block
        a.toggle-nav
          width 5.1%
          position absolute
          right 5.46%
          top 50%
          transform translate(0, -50%)
          -webkit-transform translate(0, -50%)
          -ms-transform translate(0, -50%)
          img
            width 100%
            &.collapsed
              display none
          &.collapsed
            img
              display none
            img.collapsed
              display block
        width 100%
        background-color #00c496
        #collapse-nav
          position relative
          margin-top 9%
          height 90px
          ol.nav
            position relative
            width 100%
            li
              text-align right
              display block
              width 100%
              height 30px
              a
                margin-right 5.46%
                &.nav-item
                  font-size 20px
                  text-decoration none
                  color #009975
              &.active
                a
                  &.nav-item
                    color #fff

