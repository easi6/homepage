          display block

#works
  width 100%
  max-width 100%
  float left
  div
    &.work-container
      width 100%
      position relative
      &.work-container:before
        content ""
        display block
        padding-top 28%
        @media (max-width: 767px)
          padding-top 0
      .content
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        ol
          &.works
            padding-top 9.6%
            width 94%
            max-width 900px
            margin auto
            margin-bottom 3.3%
            float left
            left 50%
            transform translate(-50%, 0)
            -webkit-transform translate(-50%, 0)
            -ms-transform translate(-50%, 0)
            position relative
            li
              &.item
                width 14.5%
                max-width 140px
                float left
                margin-left 5.5%
                cursor pointer
                img
                  width 100%
                  &.hover
                    display none
              &:hover
                img
                  display none
                  &.hover
                    display block
              &:first-child
                margin-left: 2.75%
              &:last-child
                margin-right: 2.75%
      .content-mobile
        width 84.375%
        margin auto
        float left
        margin-left 50%
        transform translate(-50%, 0)
        -webkit-transform translate(-50%, 0)
        -ms-transform translate(-50%, 0)
        ol.works
          width 100%
          margin 0
          padding 0
          li.work
            width 100%
            margin-top 11%
            float left
            &:last-child
              margin-bottom 14%
            &.vox
              margin-top 13.8%
            .desc-container
              position relative
              width 100%
              .icon-container
                float left
                width 30%
                max-width 190px
                margin auto
                img
                  width 30%
                  max-width 190px
                  position absolute
                  top 50%
                  transform translate(0, -50%)
                  -webkit-transform translate(0, -50%)
                  -ms-transform translate(0, -50%)
              .text-container
                width 63.75%
                margin-left 36.25%
                p.desc
                  font-size 22px
                  line-height 1.5
                  @media (max-width: 479px)
                    font-size 16px
                    line-height 1.3
                  color: #59595b
                p.url
                  margin-top 5%
                  font-size 24px
                  height 26px
                  @media (max-width: 479px)
                    font-size 18px
                    height 22px
                  a
                    text-decoration none
                    height 26px
                    @media (max-width: 479px)
                      height 22px
                    color #6d6e71
                    display inline-block
                    border-bottom solid 1px #6d6e71
            .image-container
              position relative
              float left
              width 100%
              margin-top 3.7%
              &.vox
                margin-top 5.5%
              img
                &.vox
                  width 30%
                  margin-left 2.5%
                &.tomoni
                  width 30%
                  margin-left 2.5%
                &.minam
                  width 100%
            .video-container
              position relative
              width 100%
              margin-top 3.7%
              &:before
                content ""
                display block
                padding-top 56.25%
              .video-area
                position absolute
                top 0
                left 0
                right 0
                bottom 0
                iframe
                  margin-top 5%
                  width 100%
                  height 100%

    &.work-images
      width 100%
      //max-width 960px
      img
        width 100%

