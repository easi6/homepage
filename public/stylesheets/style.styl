// Variables
mobile_screen_size = 640px

body
  font-family 'Open sans', sans-serif
  font-size 14px
  color rgba(51,51,51,0.2) 3
  padding 0
  margin 0

@font-face
  font-family 'Replica Pro'
  font-weight 400
  src url("/font/ReplicaProRegular.otf")
@font-face
  font-family 'Replica Pro Bold'
  font-weight 600
  src url("/font/ReplicaProBold.otf")

.font-roboto
  font-family 'Roboto'
  font-weight 400
  &.bold
    font-weight 700

.font-replica-reg
  font-family 'Replica Pro'
  font-weight 400

.font-replica-bold
  font-family 'Replica Pro Bold'
  font-weight 600

#container
  //max-width 960px
  max-width 100%
  width 100%
  position relative
  margin auto

//spacing unit
.top-buffer-sm
  margin-top 20px
.top-buffer-md
  margin-top 40px
.top-buffer-lg
  margin-top 60px

//general typography
#nav h1
  padding-top 0
  line-height 0
h1,h2,h3,h4,h5,h6
  color #00C496
  padding-top 30px
  margin 0
h1
  font-size 50px
  line-height 1.1
h2
  font-size 44px
  line-height 1.3
h3
  font-size 36px
  line-height 1.3
h4
  font-size 30px
  line-height 1.4
h5
  font-size 24px
  line-height 1.4
h6
  font-size 18px
  line-height 1.4
.lead-custom
  padding-top 10px
  font-size 16px
  line-height 1.52
  color #8D8D95

.headline
  text-align center
  width 60%
  max-width 600px
  margin 0 auto
  


#nav
  z-index 999
  position fixed
  background-color #00c496
  //max-width 960px
  max-width 100%
  width 100%
  .nav-container
    width 100%
    position relative
    &:before
      content ""
      display block
      //padding-top 7.8%
      padding-top 6.5%  
      @media (max-width: 767px)
        //padding-top 9.375%
        padding-top 9.5%
    .nav-content
      position absolute
      top 0
      left 0
      bottom 0
      right 0
      h1
        position absolute
        width 9.8%
        min-width 55px
        top 50%
        transform translate(0, -50%)
        -webkit-transform translate(0, -50%)
        -ms-transform translate(0, -50%)
        left 5%
        a
          &.logo
            display block
            img
              width 100%
              border none
              margin 0
              padding 0
      nav#main-nav
        color #fff
        ol
          &.nav
            float right
            position absolute
            top 50%
            transform translate(0, -50%)
            -webkit-transform translate(0, -50%)
            -ms-transform translate(0, -50%)
            right 48px
            li
              float left
              display inline-block
              //margin-left 56px
              margin-left 25px
              a
                &.nav-item
                  text-decoration none
                  font-size 16px
                  color #009975
              &.active
                a
                  &.nav-item
                    color #fff
              &:hover
                a
                  &.nav-item
                    color #fff
                    border-botttom 1px solid #fff
                    
      nav#main-nav-mobile
        display block
        a.toggle-nav
          width 5.1%
          position absolute
          right 5.46%
          top 50%
          transform translate(0, -50%)
          -webkit-transform translate(0, -50%)
          -ms-transform translate(0, -50%)
          img
            width 100%
            &.collapsed
              display none
          &.collapsed
            img
              display none
            img.collapsed
              display block
        width 100%
        background-color #00c496
        #collapse-nav
          position relative
          margin-top 9%
          height 90px
          ol.nav
            position relative
            width 100%
            li
              text-align right
              display block
              width 100%
              height 30px
              a
                margin-right 5.46%
                &.nav-item
                  font-size 20px
                  text-decoration none
                  color #009975
              &.active
                a
                  &.nav-item
                    color #fff


#main-container
  padding 0
  margin-top 0
  background #fff
  width 100%
  margin auto

#intro
  .intro-page
    width 100%
    //max-width 960px
    max-width 100%
    //max-height 600px
    position relative
    overflow-x hidden
    img
      display block
      width 100%
    .page-title
