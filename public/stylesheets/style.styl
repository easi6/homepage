      -webkit-transform translate(-50%, 0)
      -ms-transform translate(-50%, 0)
      p
        &.desc
          text-align center
          font-size 12px
          margin-bottom 45px
          color #808080

#modal
  .modal
    border-radius 5px
    &.fade
      .modal-dialog
        transform translate(-50%, -100%)
        -webkit-transform translate(-50%, -100%)
        -ms-transform translate(-50%, -100%)
        opacity 0
        transition transform 0.4s ease-out, opacity 0.4s ease-in
        -webkit-transition transform 0.4s ease-out, opacity 0.4s ease-in
        -ms-transition transform 0.4s ease-out, opacity 0.4s ease-in
    &.in
      .modal-dialog
        opacity 1.0
        transform translate(-50%, -55%)
        -webkit-transform translate(-50%, -55%)
        -ms-transform translate(-50%, -55%)
    .modal-dialog
      width 100%
      max-width 960px
      //height 525px
      max-height 525px
      overflow-y hidden
      border-radius 5px
      background-color #fff
      position absolute
      top 50%
      left 50%
      border none
      margin 0
      &:before
        content ""
        display block
        padding-top 55%
      .modal-content
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        //float left
        width 100%
        height 100%
        border 0
        border-radius 5px
        overflow hidden
        .modal-header
          padding 0
          margin 0
          border 0
          button
            &.close
              position absolute
              top 22px
              right 45px
              width 47px
              height 47px
              background url("/images/btn_x.png") no-repeat
              z-index 99999
        .modal-body
          padding 0
          margin 0
          border 0
          position relative
        .vox-container
          width 100%
          height 100%
          position relative
          .screenshot-container
            float left
            width 70%
            @media (max-width: 750px)
              width 100%
              float none
          .description-container
            float left
            width 30%
            margin-top 7.8%
            @media (max-width: 750px)
              width 100%
              margin-top 5%
              float none
            .description-area
              margin-left 7px
              margin-top 15%
              width 80%
              color: #59595b
              .name-area
                border-bottom solid 1px #808080
                height 31px
                h3
                  font-size: 19px
                &.no-name
                  border: 0
              .desc-area
                border-bottom solid 1px #808080
                border-top solid 1px #808080
                min-height 152px
                //max-height 187px
                margin-top 38px
                &.no-name
                  margin-top 18px
                p
                  &.desc
                    height: 100%
                    margin-top: 26px
                    margin-bottom: 26px
                    text-align left
                    font-size 13px
                    line-height 1.6
              .homepage-area
                border-bottom solid 1px #808080
                height 26px
                margin-top 30px
                a
                  color #58595b
                  font-size 13px
                  text-decoration none
                  margin-bottom: 12px
                  &:hover
                    text-decoration none
                  &:visited
                    color #58595b
  #vox-modal
